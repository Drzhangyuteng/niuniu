name: 每日天气推送（北京/香港时间早上8点）

on:
  schedule:
    - cron: '0 0 * * *'  # UTC 00:00 = 北京/香港 08:00，每天一次
  workflow_dispatch:     # 允许手动测试触发

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.10'  # 根据你的项目调整

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        if [ -f requirements.txt ]; then
          pip install -r requirements.txt
        fi

    - name: Run push script
      env:
        APP_ID: ${{ secrets.APP_ID }}
        APP_SECRET: ${{ secrets.APP_SECRET }}
        OPEN_ID: ${{ secrets.OPEN_ID }}
        TEMPLATE_ID: ${{ secrets.TEMPLATE_ID }}
        CITY: ${{ secrets.CITY }}
        WEATHER_API_KEY: ${{ secrets.WEATHER_API_KEY }}  # 如高德Key
      run: python main.py  # 项目主文件，根据实际改
